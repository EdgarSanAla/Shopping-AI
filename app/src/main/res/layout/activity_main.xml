<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_login"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Shopping-AI"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/main_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/main_logo"
        android:hint="Usuario"
        android:inputType="text" />

    <EditText
        android:id="@+id/main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_email"
        android:layout_margin="16dp"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/main_btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/main_password"
        android:layout_alignEnd="@+id/main_password"
        android:layout_alignStart="@+id/main_password"/>

    <TextView
        android:id="@+id/main_txtRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:layout_below="@+id/main_btnEntrar"
        android:layout_alignEnd="@+id/main_btnEntrar"/>

    <Button
        android:id="@+id/main_btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false" />

</RelativeLayout>